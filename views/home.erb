<% @posts.each do |post| %>

<div class="ui fluid card">
	<div class="content">
		<div class="right floated meta"><%= DateHelper.days_since_upload(post.created_at.to_datetime) %></div>
		<img class="ui avatar image" src="/images/logo2.png"> Julian
	</div>
	<div class="image">
		<img src="<%= post.img_url %>">
	</div>

	<!-- needs to be on one line cause of white space shittiness -->
	<div class="content pre"><%= post.description %></div>
	
	<div class="extra content">
		<div class="ui large transparent left icon input">
			<i class="heart outline icon"></i>
			<input type="text" placeholder="Add Comment...">
		</div>
	</div>
</div>

<% end %>